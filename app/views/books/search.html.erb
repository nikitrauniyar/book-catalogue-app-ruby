<h1 style="text-align: center">Searched Books</h1>
<% if @books.blank? %>
  <p>There are not any books in this Catgeory.</p>
<% else %>
  <p>These are the current books with Category <%=@category_name %></p>
  <ul id="books">
    <% @books.each do |b| %>
      <li>
        <%= b.title %> |
        <%= link_to "Show", {:controller=>'books',:action => 'show', :id => b.id, :logged=>@is_logged} %>|
      </li>
    <% end %>
  </ul>
<% end %>
<%if @is_logged%>
  <%= link_to 'Back', {:controller => 'admins', :action => 'index'} %>
<%else %>
  <%= link_to 'Back', {:controller => 'books', :action => 'list'} %>
<%end %>
