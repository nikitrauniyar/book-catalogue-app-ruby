<div>
  <%= form_tag "/auth" do %>
    <div>
      <p><%= label_tag(:username, "Username") %></p>
      <p><%= text_field_tag(:username, nil) %></p>
      <p><%= label_tag(:password, "Password") %></p>
      <p><%= text_field_tag(:password, nil) %></p>
    </div>
    <%= submit_tag "Login" %>
  <% end %>
</div>
